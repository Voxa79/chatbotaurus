# Neo4j
{$NEO4J_HOSTNAME} {
    reverse_proxy neo4j:7474
}

# Landing Site - Sécurité Maximum Next-Gen
{$LANDING_HOSTNAME} {
    # Headers de sécurité obligatoires niveau 10/10
    header {
        # HSTS avec preload et sous-domaines
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        
        # Protection contre clickjacking
        X-Frame-Options "DENY"
        
        # Protection MIME sniffing
        X-Content-Type-Options "nosniff"
        
        # Protection XSS navigateur
        X-XSS-Protection "1; mode=block"
        
        # Referrer policy stricte
        Referrer-Policy "strict-origin-when-cross-origin"
        
        # CSP production sécurisée avec CDN autorisés
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://vg-bunny-cdn.b-cdn.net https://js.stripe.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https: https://vg-bunny-cdn.b-cdn.net; font-src 'self' data: https://fonts.gstatic.com; connect-src 'self' https://vg-bunny-cdn.b-cdn.net https://js.stripe.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests"
        
        # Permissions Policy restrictive
        Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=(), usb=(), magnetometer=(), accelerometer=(), gyroscope=(), bluetooth=(), fullscreen=(), autoplay=(), encrypted-media=(), picture-in-picture=()"
        
        # Cross-Origin Policies
        Cross-Origin-Embedder-Policy "require-corp"
        Cross-Origin-Opener-Policy "same-origin"
        Cross-Origin-Resource-Policy "same-origin"
        
        # Cache sécurisé
        Cache-Control "public, max-age=300, s-maxage=600, stale-while-revalidate=86400"
        
        # Masquer informations serveur
        -Server
        -X-Powered-By
        
        # Headers custom sécurité
        X-Security-Level "Maximum"
        X-Content-Security "Active"
        X-Europa-Security "10.0"
    }
    
    # Redirection HTTPS forcée
    @http {
        protocol http
    }
    redir @http https://{host}{uri} permanent
    
    # Rate limiting par IP
    rate_limit {
        zone landing 10m
        key {remote_host}
        events 100
        window 1m
    }
    
    # Géo-blocking (exemple pour bloquer certains pays)
    @blocked_countries {
        header_regexp Country-Code ^(CN|RU|KP)$
    }
    respond @blocked_countries "Access denied from your location" 403
    
    # Protection contre les bots malveillants
    @malicious_bots {
        header_regexp User-Agent "(?i)(sqlmap|nikto|nmap|burp|owasp|masscan|nuclei|acunetix|nessus|openvas)"
    }
    respond @malicious_bots "Malicious activity detected" 403
    
    # Bloquer certaines méthodes HTTP dangereuses
    @dangerous_methods {
        method TRACE OPTIONS CONNECT
    }
    respond @dangerous_methods "Method not allowed" 405
    
    reverse_proxy landing-site:3030 {
        # Headers pour le backend
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-Host {host}
        header_up X-Forwarded-Port {server_port}
        
        # Timeout sécurisé
        timeout 30s
        
        # Health check
        health_uri /health
        health_interval 30s
        health_timeout 5s
    }
}

import /etc/caddy/addons/*.conf

